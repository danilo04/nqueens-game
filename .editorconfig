root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{kt,kts}]
indent_size = 4
max_line_length = 120
# Disable function naming rule to allow PascalCase for @Composable functions
ktlint_standard_function-naming = disabled

[*.{xml,json}]
indent_size = 2

[*.{md,yml,yaml}]
indent_size = 2
trim_trailing_whitespace = false

[*.properties]
indent_size = 4
